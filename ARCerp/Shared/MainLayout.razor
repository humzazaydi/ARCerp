    </div>
</CascadingValue>

@code {
    private string pageHeading;

    [CascadingParameter]
    public string PageHeading
    {
        get => pageHeading;
        set
        {
            if (pageHeading != value)
            {
                pageHeading = value;
                StateHasChanged();
            }
        }
    }

    public void SetPageHeading(string heading)
    {
        PageHeading = heading;
    }
}